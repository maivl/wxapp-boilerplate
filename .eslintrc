{
    "extends": ["cantonjs"],
    "globals": {
        "__DEV__": true,
        "__WECHAT__": true,
        "__ALIPAY__": true,
        "App": true,
        "Page": true,
        "Component": true,
        "wx": true,
        "my": true,
        "getApp": true
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "webpack.config.babel.js"
            }
        }
    },
    "rules": {
        "arrow-body-style": 0,
        "consistent-return": 0,
        "generator-star-spacing": 0,
        "global-require": 1,
        "import/extensions": 0,
        "import/no-extraneous-dependencies": 0,
        "import/no-unresolved": 0,
        "import/prefer-default-export": 0,
        "no-bitwise": 0,
        "no-cond-assign": 0,
        "no-else-return": 0,
        "lines-between-class-members": 0,
        "no-nested-ternary": 0,
        "no-restricted-syntax": 0,
        "no-use-before-define": 0,
        "require-yield": 1,
        "no-unused-vars": 0,
        "space-infix-ops": 0,
        "object-shorthand": 0,
        "quotes": 0,
        "prefer-const": 0,
        "indent": [2, 4, { "SwitchCase": 1 }],
        "curly": [1, "all"],
        "comma-dangle": [2, "never"],
        "space-in-parens": 0,
        "no-irregular-whitespace": 2,
        "no-mixed-spaces-and-tabs": [2, false],
        "no-underscore-dangle": 2,
        "key-spacing": 0,
        "no-param-reassign": 0,
        "no-lonely-if": 0,
        "linebreak-style": 0,
        "max-len": [2, 300],
        "class-methods-use-this": 0,
        "quote-props": 0,
        "no-shadow": 0,
        "guard-for-in": 0,
        "no-labels": 0,
        "prefer-template": 0,
        "import/no-dynamic-require": 0,
        "no-debugger": 0,
        "prefer-destructuring": 0,
        "object-curly-newline": 0,
        "semi": [2, "always"],
        "no-inline-comments": 2,
        "camelcase": 2,
        "no-console": 2,
        "no-debugger": 2,
        "no-empty": 2,
        "no-inner-declarations": [2, "functions"],
        "no-multiple-empty-lines": [2, {"max": 2}],
        "consistent-this": [2, "that"],
        "eqeqeq": 1,
        "generator-star-spacing": 1,
        "id-length": [1, { "min": 3, "max": 18 }]
    }
}
